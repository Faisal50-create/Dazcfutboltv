{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

  <!-- Homepage -->
  <url>
    <loc>{{ .Site.BaseURL }}</loc>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
  </url>

  <!-- Static Pages (About, Contact, DMCA, Privacy etc.) -->
  {{ range where .Site.RegularPages "Type" "page" }}
  <url>
    <loc>{{ .Permalink }}</loc>
    <lastmod>{{ .Lastmod.Format "2006-01-02T15:04:05Z07:00" }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.6</priority>
  </url>
  {{ end }}

  <!-- Blog Index Page (/blog/) -->
  {{ $blogIndex := .Site.GetPage "section" "blog" }}
  {{ if $blogIndex }}
  <url>
    <loc>{{ $blogIndex.Permalink }}</loc>
    <lastmod>{{ $blogIndex.Lastmod.Format "2006-01-02T15:04:05Z07:00" }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.6</priority>
  </url>
  {{ end }}

  <!-- Blog Posts -->
  {{ range where .Site.RegularPages "Section" "blog" }}
  <url>
    <loc>{{ .Permalink }}</loc>
    <lastmod>{{ .Lastmod.Format "2006-01-02T15:04:05Z07:00" }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>0.6</priority>
  </url>
  {{ end }}

</urlset>
